<h2 class="text-center my-4">Actualización Cliente</h2>
<form method="POST" action="/clientes/update">
  <div class="form-group mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" name="nombre" id="nombre" class="form-control" value="{{cliente.nombre}}">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Apellidos</label>
        <input type="text" name="apellidos" id="apellidos" class="form-control" value="{{cliente.apellidos}}">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Dirección</label>
        <input type="text" name="direccion" id="direccion" class="form-control" value="{{cliente.direccion}}">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Teléfono</label>
        <input type="number" name="telefono" id="telefono" class="form-control" value="{{cliente.telefono}}">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Fecha de nacimiento</label>
        <input type="date" name="fecha_nacimiento" id="fecha_nacimiento" class="form-control" value="{{cliente.fecha_nacimiento}}">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">DNI/Pasaporte</label>
        <input type="text" name="dni_pasaporte" id="dni_pasaporte" class="form-control" value="{{cliente.dni_pasaporte}}">
    </div>
     <div class="form-group mb-3">
        <label class="form-label">Email</label>
        <input type="text" name="email" id="email" class="form-control" value="{{cliente.email}}">
    </div>
    <input type="hidden" name="id" value="{{cliente.id}}">
    <input type="submit" value="Actualizar" class="btn btn-success mt-4">
</form>